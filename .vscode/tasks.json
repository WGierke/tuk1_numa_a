{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "docker",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "docker build",
            "suppressTaskName": true,
            "args": [
                "build",
                "-t",
                "tuk-numa",
                "./docker"
            ]
        },
        {
            "taskName": "cmake Debug Docker",
            "suppressTaskName": true,
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceRoot}:${workspaceRoot}",
                "-w",
                "${workspaceRoot}/build",
                "tuk-numa",
                "/bin/bash",
                "-c",
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
            ]
        },
        {
            "taskName": "cmake Release Docker",
            "suppressTaskName": true,
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceRoot}:${workspaceRoot}",
                "-w",
                "${workspaceRoot}/build",
                "tuk-numa",
                "/bin/bash",
                "-c",
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Release .."
            ]
        },
        {
            "taskName": "make Docker",
            "suppressTaskName": true,
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceRoot}:${workspaceRoot}",
                "-w",
                "${workspaceRoot}/build",
                "tuk-numa",
                "/bin/bash",
                "-c",
                "make -j8"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "make clean Docker",
            "suppressTaskName": true,
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceRoot}:${workspaceRoot}",
                "-w",
                "${workspaceRoot}/build",
                "tuk-numa",
                "/bin/bash",
                "-c",
                "make clean"
            ]
        },
        {
            "taskName": "run Docker",
            "suppressTaskName": true,
            "args": [
                "run",
                "--rm",
                "-v",
                "${workspaceRoot}:${workspaceRoot}",
                "-w",
                "${workspaceRoot}/build",
                "tuk-numa",
                "./src/tuk_numa_benchmark"
            ],
            "isTestCommand": true
        }
    ]
}
